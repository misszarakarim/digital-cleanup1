---
const { variant= "primary", header, text, img} = Astro.props;

const section = "rounded-[15px] p-8 flex flex-cols md:mx-28"

const variantClasses = {
"primary": "bg-blaa",
"secondary": "bg-groen"

};

---





<div class:list= {[section, variantClasses[variant]]} >
  <div class="md:pr-24">
    <h4 class="font-bold mb-2.5">{header}</h4>
    <p>{text}</p>  </div>


    <slot />
  </div>
</div>

 