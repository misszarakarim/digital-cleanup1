---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Section1 from '../components/Section1.astro';
import Section2 from '../components/Section2.astro';
import Section3 from '../components/Section3.astro';
import Section4 from '../components/Section4.astro';

---
<MainLayout title="Titel">

	<section class="pt-20">
    <div class="mx-20">
      <div class="text-4xl font-bold pb-6 text-center flex flex-col space-y-2">
        <h1 class="place-self-start">Digital</h1>
        <h1 class="place-self-center">Cleanup</h1>
        <h1 class="place-self-end mr-4">Day</h1>
      </div>
    </div>

    <div class="">
        <div class="mix-blend-multiply opacity-50 bg-green-600 h-32 w-32"></div>
        <div class="mix-blend-multiply opacity-50 bg-green-400 h-40 w-44"></div>
        <div class="mix-blend-multiply opacity-50 bg-blue-600 h-36 w-40"></div>
        <div class="mix-blend-multiply opacity-50 bg-blue-400 h-52 w-56"></div>
    </div>

    <div class="text-center mt-5">
       <Button />
    </div>

      <div class="text-center mt-8">
        <p class="mb-2">Hjælp med oprydning!</p>
        <p>Tilmeld dig før den 16. marts til den store oprydning </p>
      </div>

      <div class="bg-[#9ED2DD] h-7 mt-12"></div>

    </section>

<Section1 />
<Section2 />
<Section3 />
<Section4 />
<div class="text-center mt-5">
       <Button />
    </div>
</MainLayout>